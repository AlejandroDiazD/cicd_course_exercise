pipeline
{
    agent any

    tools
    {
        maven 'Maven'
    }

    options
    {
        timeout(time:10, unit: 'MINUTES')
    }
    
    stages
    {
        stage("Clonar repositorio")
        {
            steps
            {
                git branch: 'develop', url: 'https://github.com/AlejandroDiazD/cicd_course_exercise'
            }
        }
  
        stage("Comando MVN Clean")
        {
            steps
            {
                script
                {
                    dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\dia4_ejercicio1_maven\\maven2")
                    {
                        bat 'mvn clean'
                    }
                }
            }
        }
        
        stage("Comando MVN Install")
        {
            steps
            {
                script
                {
                    dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\dia4_ejercicio1_maven\\maven2")
                    {
                        bat 'mvn install'
                    }
                }
            }
        }

        stage("Comando MVN Validate")
        {
            steps
            {
                script
                {
                    dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\dia4_ejercicio1_maven\\maven2")
                    {
                        bat 'mvn validate'
                    }
                }
            }
        }

        stage("Comando MVN Test")
        {
            steps
            {
                script
                {
                    dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\dia4_ejercicio1_maven\\maven2")
                    {
                        bat 'mvn test'
                    }
                }
            }
        }
        
        stage("Copio el archivo para el despliegue")
        {
            steps
            {
                bat """xcopy "C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\dia4_ejercicio1_maven\\maven2\\target\\maven2-0.0.1-SNAPSHOT.jar" "C:\\" /y
                """
                echo "Se movio el archivo."
            }
        }
        
    }    
post
{
    always
    {
        echo "Se ejecuto correctamente"
    }
    
    failure
    {
        echo "Fallo."
        mail to: "admin@indra.es", subject: "Pipeline fallo ${env.JOB_NAME}", body: "El pipeline fallo, favor de revisar."
    }
    
    success
    {
        echo "Enhorabuena, funciono bien."
    }
}
}